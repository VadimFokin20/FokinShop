@{
    @model CatalogItemViewModel
}

<div class="col-md-4">
    <div class="card mb-4 product-wap rounded-0">
        <div class="card rounded-0">
            <img class="card-img rounded-0 img-fluid" src="@Model.PictureUri">
            <div class="card-img-overlay rounded-0 product-overlay d-flex align-items-center justify-content-center">
                <ul class="list-unstyled">
                    <li><a class="btn btn-success text-white" asp-controller="home" asp-action="shop-single"><i class="far fa-heart"></i></a></li>
                    <li><a class="btn btn-success text-white mt-2" asp-controller="home" asp-action="shop-single"><i class="far fa-eye"></i></a></li>
                    <li><a class="btn btn-success text-white mt-2" asp-controller="home" asp-action="shop-single"><i class="fas fa-cart-plus"></i></a></li>
                </ul>
            </div>
        </div>
        <div class="card-body">
            <a asp-controller="home" asp-action="shop-single" class="h3 text-decoration-none">@Model.Name</a>
            <ul class="w-100 list-unstyled d-flex justify-content-between mb-0">
                <li>
                    @for (int i = 0; i < Model.ProductSizes.Count; i++)
                    {
                        <span>@(Model.ProductSizes[i].Size + (i<Model.ProductSizes.Count-1 ? " /" : ""))</span>
                    }
                </li>
            </ul>
            <ul class="list-unstyled d-flex justify-content-center mb-1">
                <li>
                    @for (int i = 0; i < 5; i++)
                    {
                        if(Model.Rating > i)
                        {
                            <i class="text-warning fa fa-star"></i>
                        }
                        else
                        {
                            <i class="text-muted fa fa-star"></i>
                        }
                    }
                </li>
            </ul>
            <p class="text-center mb-0">@Model.Price.ToString("N2")</p>
        </div>
    </div>
</div>
